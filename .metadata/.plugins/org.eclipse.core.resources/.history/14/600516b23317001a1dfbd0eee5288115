<script type="text/javascript">
debugger
$('.toggle').click(function(){
	$(this).children('i').toggleClass('fa-pencil');
	$('.form').animate({height: "toggle",'padding-top': 'toggle','padding-bottom': 'toggle',opacity: "toggle"}, "slow");
	
});

$(function(){
	//数据校验
        $("#water-standard-form").bootstrapValidator({
            message: '请输入有效值',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            submitHandler: function (validator, userform, submitButton) {
            	   debugger
            	    var xx=  $("#djdj").val()
            	   $.ajax({
                       url: "/userInfo/getverification",
                       type: "get", //提交方式
                       success: function (data) {
                    	   debugger
                    	  if(xx==data){
                    		  $("#aaa").hide()
                    		  
                    		  $.ajax({
                              url: "/userInfo/getverification",
                              type: "post", //提交方式
                              data: {password :  $("#password").val() , name :  $("#name").val()},
                              success: function(data){
                            	  layer.msg('登陆成功'); 
                              }
                    		  })
                    		  
                    	  }else{
                    		  layer.msg('hello'); 
                    		  $("#aaa").show()
                    	  }
                       }
                   });
                 
            },
            fields: {
            	passwd: {
                    validators: {
                        notEmpty: {
                            message: '请输入密码'
                        }
                    }
                },
                name: {
                    validators: {
                        notEmpty: {
                            message: '请输名称'
                        }
                    }
                },
                zhangss: {
                    validators: {
                        notEmpty: {
                            message: '请输验证码'
                        }
                    }
                }
            }
        });
	
	
      //数据校验
        $("#zhangbingxing").bootstrapValidator({
            message: '请输入有效值',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            submitHandler: function (validator, userform, submitButton) {
              
            	   var formData = $('#zhangbingxing').serialize(); 
            	   
            	   $.ajax({
                       url: "/TbUser",
                       type: "post", //提交方式
                       data: formData,
                       success: function (data) {
                    	  
                    	   layer.msg('注册成功跳转登录页面'); 
                    	 $(".toggle").click(); 
                       }
                   });
              
            },
            fields: {
            	passwd: {
                    validators: {
                        notEmpty: {
                            message: '请输入密码'
                        }
                    }
                },
                name: {
                    validators: {
                        notEmpty: {
                            message: '请输名称'
                        }
                    }
                },
                email: {
                    validators: {
                        notEmpty: {
                            message: '请输入邮箱'
                        }
                    }
                },
                phone: {
                    validators: {
                        notEmpty: {
                            message: '请输入电话名称'
                        }
                    }
                }
            }
        });
})
</script>

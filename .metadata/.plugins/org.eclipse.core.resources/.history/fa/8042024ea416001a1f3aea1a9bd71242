<script type="text/javascript">
$('.toggle').click(function(){
	$(this).children('i').toggleClass('fa-pencil');
	$('.form').animate({height: "toggle",'padding-top': 'toggle','padding-bottom': 'toggle',opacity: "toggle"}, "slow");
	
});

$(function(){
	//数据校验
        $("#water-standard-form").bootstrapValidator({
            message: '请输入有效值',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            submitHandler: function (validator, userform, submitButton) {
                modals.confirm('确认保存？', function () {
                    
                 
                });
            },
            fields: {
            	password: {
                    validators: {
                        notEmpty: {
                            message: '请输入密码'
                        }
                    }
                },
                name: {
                    validators: {
                        notEmpty: {
                            message: '请输名称'
                        }
                    }
                }
            }
        });
	
	
      //数据校验
        $("#zhangbingxing").bootstrapValidator({
            message: '请输入有效值',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            submitHandler: function (validator, userform, submitButton) {
                modals.confirm('确认保存？', function () {
                    
                 
                });
            },
            fields: {
            	password: {
                    validators: {
                        notEmpty: {
                            message: '请输入密码'
                        }
                    }
                },
                name: {
                    validators: {
                        notEmpty: {
                            message: '请输名称'
                        }
                    }
                },
                email: {
                    validators: {
                        notEmpty: {
                            message: '请输入邮箱'
                        }
                    }
                },
                phone: {
                    validators: {
                        notEmpty: {
                            message: '请输入电话名称'
                        }
                    }
                }
            }
        });
})
</script>

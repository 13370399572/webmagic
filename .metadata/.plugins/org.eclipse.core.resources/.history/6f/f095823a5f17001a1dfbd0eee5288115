			<li>

				<div th:each="singer:${singerpage.content}" class="picWrap fl">
					<img th:src="@{${singer.imgUrl}}" class="pic-item" src="#"
					th:onclick="go([[${singer.url}]])"	/> <a th:text="${singer.title}" 

<script type="text/javascript">
debugger
$('.toggle').click(function(){
	$(this).children('i').toggleClass('fa-pencil');
	$('.form').animate({height: "toggle",'padding-top': 'toggle','padding-bottom': 'toggle',opacity: "toggle"}, "slow");
	
});

$(function(){
	//数据校验
        $("#water-standard-form").bootstrapValidator({
            message: '请输入有效值',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            submitHandler: function (validator, userform, submitButton) {
            	   debugger
            	    var xx=  $("#djdj").val()
            	   $.ajax({
                       url: "/userInfo/getverification",
                       type: "get", //提交方式
                       success: function (data) {
                    	   debugger
                    	  if(xx==data){
                    		  $("#aaa").hide()
                    	  }else{
                    		  layer.ready(function(){ 
                    			  layer.open({
                    			    type: 2,
                    			    title: '欢迎页',
                    			    maxmin: true,
                    			    area: ['800px', '500px'],
                    			    end: function(){
                    			      layer.tips('Hi')
                    			    }
                    			  });
                    		  })
                    		  $("#aaa").show()
                    	  }
                       }
                   });
                 
            },
            fields: {
            	password: {
                    validators: {
                        notEmpty: {
                            message: '请输入密码'
                        }
                    }
                },
                name: {
                    validators: {
                        notEmpty: {
                            message: '请输名称'
                        }
                    }
                },
                zhangss: {
                    validators: {
                        notEmpty: {
                            message: '请输验证码'
                        }
                    }
                }
            }
        });
	
	
      //数据校验
        $("#zhangbingxing").bootstrapValidator({
            message: '请输入有效值',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            submitHandler: function (validator, userform, submitButton) {
               confirm('确认注册？', function () {
                    
                 
                });
            },
            fields: {
            	password: {
                    validators: {
                        notEmpty: {
                            message: '请输入密码'
                        }
                    }
                },
                name: {
                    validators: {
                        notEmpty: {
                            message: '请输名称'
                        }
                    }
                },
                email: {
                    validators: {
                        notEmpty: {
                            message: '请输入邮箱'
                        }
                    }
                },
                phone: {
                    validators: {
                        notEmpty: {
                            message: '请输入电话名称'
                        }
                    }
                }
            }
        });
})
</script>
